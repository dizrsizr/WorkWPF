<Window x:Class="МногооконноеПриложение.ОкноПереводчика"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переводчик Погоды" Height="200" Width="300">
    <Grid Margin="10">
        <Label Content="Введите слово (погода):" Margin="10,10,0,0"/>
        <TextBox x:Name="СловоTextBox" Margin="10,30,10,0" Height="25"/>
        <Label x:Name="РезультатLabel" Content="" Margin="10,90,10,10" FontSize="14"/>
        <Button Content="Перевести" Margin="10,100,10,0" Click="Перевести_Click" Width="100" Height="25"/>
    </Grid>
</Window>