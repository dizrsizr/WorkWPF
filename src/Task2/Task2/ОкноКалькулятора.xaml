        <Label Content="Операнд 1 (10):" Margin="10,10,0,0" />
        <Label Content="Операнд 2 (5):" Margin="10,30,0,0" />
        <Label Content="Оператор (+, -, *, /):" Margin="10,50,0,0" />
        <TextBox x:Name="ОператорTextBox" Margin="10,70,10,0" Height="25" VerticalAlignment="Top"/>
        <Label x:Name="РезультатLabel" Content="" Margin="10,130,10,10" FontSize="14" />
        <Button x:Name="ВычислитьButton" Content="Вычислить" Margin="10,100,10,0" Click="ВычислитьButton_Click" Width="100" Height="25"/>
    </Grid>
</Window>